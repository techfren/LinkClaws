{
    "name": "agentmail-toolkit",
    "version": "0.2.6",
    "description": "AgentMail Toolkit",
    "scripts": {
        "build": "tsup",
        "lint": "eslint .",
        "prettier": "prettier --write ."
    },
    "keywords": [
        "agentmail",
        "toolkit",
        "tools",
        "ai",
        "vercel",
        "langchain"
    ],
    "author": "AgentMail <support@agentmail.cc>",
    "license": "MIT",
    "homepage": "https://agentmail.to",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/agentmail-to/agentmail-toolkit.git"
    },
    "packageManager": "pnpm@10.6.4",
    "type": "module",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./ai-sdk": {
            "types": "./dist/ai-sdk.d.ts",
            "import": "./dist/ai-sdk.js",
            "require": "./dist/ai-sdk.cjs"
        },
        "./langchain": {
            "types": "./dist/langchain.d.ts",
            "import": "./dist/langchain.js",
            "require": "./dist/langchain.cjs"
        },
        "./mcp": {
            "types": "./dist/mcp.d.ts",
            "import": "./dist/mcp.js",
            "require": "./dist/mcp.cjs"
        },
        "./clawdbot": {
            "types": "./dist/clawdbot.d.ts",
            "import": "./dist/clawdbot.js",
            "require": "./dist/clawdbot.cjs"
        }
    },
    "dependencies": {
        "agentmail": "^0.2.6",
        "jszip": "^3.10.1",
        "unpdf": "^1.4.0",
        "zod": "^4.1.13"
    },
    "peerDependencies": {
        "@modelcontextprotocol/sdk": "^1.24.1",
        "ai": "^6.0.0-beta.150",
        "clawdbot": "*",
        "langchain": "^1.2.0"
    },
    "peerDependenciesMeta": {
        "@modelcontextprotocol/sdk": {
            "optional": true
        },
        "ai": {
            "optional": true
        },
        "clawdbot": {
            "optional": true
        },
        "langchain": {
            "optional": true
        }
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@mariozechner/pi-agent-core": "^0.50.1",
        "@sinclair/typebox": "^0.34.47",
        "@types/node": "^24.10.1",
        "clawdbot": "2026.1.24-3",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^16.5.0",
        "prettier": "3.5.3",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.1"
    }
}
